<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.graphiti.ui.diagramTypes">
      <diagramType
            description="Diagram Type for Feature Model Editor"
            id="org.eclipse.featuremodel.treeeditor.diagramtype"
            name="Feature Diagram"
            type="Feature Diagram">
      </diagramType>
   </extension>
   <extension
         point="org.eclipse.graphiti.ui.diagramTypeProviders">
      <diagramTypeProvider
            class="org.eclipse.featuremodel.treeeditor.diagram.FMEDiagramTypeProvider"
            description="Diagram Type Provider for Feature Model Editor"
            id="org.eclipse.featuremodel.treeeditor.diagramtypeprovider"
            name="Feature Diagram Type Provider">
         <diagramType
               id="org.eclipse.featuremodel.treeeditor.diagramtype">
         </diagramType>
      </diagramTypeProvider>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
         name="Feature Model Editor"
         id="org.eclipse.featuremodel.treeeditor.wizard.category">
      </category>
      <wizard
            class="org.eclipse.featuremodel.treeeditor.FMENewWizard"
            id="org.eclipse.featuremodel.treeeditor.wizard"
            name="Feature Diagram">
         <description>
            Creates a new Feature Diagram.
         </description>
      </wizard>
   </extension>	    
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.featuremodel.treeeditor.FMEDiagramEditor"
            contributorClass="org.eclipse.featuremodel.treeeditor.FMEEditorActionBarContributor"
            default="true"
            extensions="featurediagram"
            id="org.eclipse.featuremodel.treeeditor.diagrameditor"
            name="Feature Diagram">
      </editor>
   </extension>
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.featuremodel.treeeditor.popup.createwizardaction"
            nameFilter="*.featuremodel"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               label="Create Feature Diagram"
               class="org.eclipse.featuremodel.treeeditor.FMECreateWizardAction"
               menubarPath="additions"
               enablesFor="1"
               id="org.eclipse.featuremodel.treeeditor.createwizardaction">
         </action>
      </objectContribution>
   </extension>
</plugin>
